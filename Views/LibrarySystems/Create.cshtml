@model Library_Management_System.Models.LibrarySystem

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header text-white" style="background-color:#1b4332;">
            <h3 class="mb-0">Add Borrow Record</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="BorrowerName" class="form-label fw-semibold"></label>
                    <input asp-for="BorrowerName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="BorrowerName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BookTitle" class="form-label fw-semibold"></label>
                    <input asp-for="BookTitle" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="BookTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Author" class="form-label fw-semibold"></label>
                    <input asp-for="Author" class="form-control" placeholder="Enter author name" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BorrowDate" class="form-label fw-semibold"></label>
                    <input asp-for="BorrowDate" class="form-control" type="date" />
                    <span asp-validation-for="BorrowDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReturnDate" class="form-label fw-semibold"></label>
                    <input asp-for="ReturnDate" class="form-control" type="date" />
                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">Create Record</button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
