@model IEnumerable<Library_Management_System.Models.LibrarySystem>

@{
    ViewData["Title"] = "Filtered Borrow Records";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-success">Filtered Borrow Records</h2>
        <a asp-action="Index" class="btn btn-outline-success">Back to All Records</a>
    </div>

    <div class="mb-4">
        <form method="get" class="d-flex gap-2 align-items-center">
            <label class="fw-semibold text-success mb-0">Filter by Duration:</label>
            <select name="category" class="form-select w-auto">
                <option>All</option>
                <option>Short-term</option>
                <option>Regular</option>
                <option>Extended</option>
            </select>
            <button type="submit" class="btn btn-success">Apply</button>
        </form>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-success">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.BorrowerName)</th>
                        <th>@Html.DisplayNameFor(m => m.BookTitle)</th>
                        <th>@Html.DisplayNameFor(m => m.BorrowDate)</th>
                        <th>@Html.DisplayNameFor(m => m.ReturnDate)</th>
                        <th>@Html.DisplayNameFor(m => m.DaysBorrowed)</th>
                        <th>@Html.DisplayNameFor(m => m.LateFee)</th>
                        <th>@Html.DisplayNameFor(m => m.BorrowDurationCategory)</th>
                        <th class="text-center">Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BorrowerName</td>
                            <td>@item.BookTitle</td>
                            <td>@item.BorrowDate.ToShortDateString()</td>
                            <td>@item.ReturnDate.ToShortDateString()</td>
                            <td>@item.DaysBorrowed</td>
                            <td class="text-danger fw-bold">@item.LateFee</td>
                            <td>
                                <span class="badge rounded-pill
                                        @(item.BorrowDurationCategory == "Short-term" ? "bg-success" :
                                                                            item.BorrowDurationCategory == "Regular" ? "bg-warning text-dark" :
                                                                            "bg-danger")">
                                @item.BorrowDurationCategory
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">Details</a>
                        </td>
                    </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</div>
